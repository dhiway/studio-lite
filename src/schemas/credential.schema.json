{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/credential.schema.json",
  "title": "Verifiable Credential",
  "type": "object",
  "required": ["name","email", "issuer", "credentialSubject"],
  "properties": {
     "name": {
      "type": "string",
      "description": "credential issued person name"
    },
      "email": {
      "type": "string",
      "description": "credential issued person email"
    },
     "issuer": {
      "type": "string",
      "description": "DID or address of the credential issuer"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "description": "Subject claims",
      "properties": {
        "id": { "type": "string", "description": "DID of the subject" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["id"]
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/credential.schema.json",
  "title": "Verifiable Credential",
  "type": "object",
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject"],
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["https://www.w3.org/2018/credentials/v1"]
    },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["VerifiableCredential"]
    },
    "issuer": {
      "type": "string",
      "description": "DID or address of the credential issuer"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "description": "Subject claims",
      "properties": {
        "id": { "type": "string", "description": "DID of the subject" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["id"]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "proofPurpose": { "type": "string" },
        "verificationMethod": { "type": "string" },
        "jws": { "type": "string" }
      }
    }
  }
}
